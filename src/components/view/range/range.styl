.rs-range-slider
  position          : relative
  border            : 2px solid rgb(167, 169, 180)
  border-radius     : 25px

  &_vertical
    width           : 20px
    height          : 100%

  &_horizontal
    height          : 20px
    width           : 100%


  &__container-label
    position          : absolute


  &__interval
    position          : absolute
    height            : 100%
    width             : 100%

    display: flex
    justify-content: center
    align-items: center