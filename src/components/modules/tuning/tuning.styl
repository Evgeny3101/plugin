.tuning
  width               : 875px
  padding             : 25px 40px

  display             : flex
  flex-direction      : column
  justify-content     : space-around

  border-right        : 30px solid #414c5c

  hr
    height            : 1px
    width             : 100%
    margin            : 5px 0
    background        : #000

  &__parameter
    margin            : 5px 10px

  // parameter
  &-parameter
    display                   : grid
    grid-template-columns     : 145px 1fr
    align-items               : center

    &__name
      font-size               : 16px

    &__options-container
      display                 : grid
      grid-template-columns   : 80px 80px 80px

      height                  : 22px

    &__options
      display                 : flex
      align-items             : center

    &__input
      margin                  : 3px 8px 0 0