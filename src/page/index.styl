*
  box-sizing          : border-box
  font                : 700 15px sans-serif
  color               : #414c5c

h3
  margin              : 0

.page
  display             : flex
  flex-direction      : column
  height              : 500px
  background          : #414c5c

.wrapper
  width               : 100%
  max-width           : 1200px
  min-width           : 750px
  margin              : 20px auto

  display             : flex
  justify-content     : space-between
  background          : #fff

.container
  position              relative
  height              : 100%
  width               : 100%
  padding             : 20px

  display             : flex
  justify-content     : space-between
  align-items         : center

.plugin
  width               : 100%
  height              : 100%
  margin              : 30px

  display             : flex
  justify-content     : space-around
  align-items         : center

.container-field
  position            : absolute
  top                 : 20px

.field-style
  margin              : 0 15px 0 0
  width               : 60px
