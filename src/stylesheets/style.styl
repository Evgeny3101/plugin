*
  box-sizing: border-box
  font              : 700 15px sans-serif
  color             : #414c5c

.page
  display           : flex
  flex-direction    : column
  justify-content   : space-between
  height            : 500px
  background        : #414c5c

.wrapper
  width             : 100%
  max-width         : 1200px
  margin            : 20px auto
  display           : flex
  justify-content   : space-between
  background        : #fff

.container
  position            relative
  height            : 400px
  width             : 100%
  padding           : 20px

.plugin
  width             : 100%
  height            : 100%

  display           : flex
  justify-content   : space-around
  align-items       : center

.container-field
  position absolute

  display           : flex
  justify-content   : space-between

.field-style
  margin            : 0 15px 0 0
  width             : 60px


.tuning
  width             : 700px
  padding           : 25px 40px
  border-right      : 30px solid #414c5c
  height            : 100%
  display           : flex
  flex-direction    : column
  justify-content   : space-around

  hr
    height 1px
    width 100%
    margin: 0
    background #000

  input[type="button"]
    margin: 10px 0 0

  &__container
    display           : flex
    align-items       : center
    margin            : 2px 0

    h3
      font-size       : 16px
      margin          : 0 0 0 20px
      width           : 140px

    input[type="radio"]
      margin-left     : 10px
      padding         : 5px

    label
      display: flex
      width           : 70px
      padding         : 5px



