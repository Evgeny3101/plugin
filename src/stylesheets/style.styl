body
  background        : #414c5c

.page
  margin            : 50px 100px
  display           : flex
  flex-direction    : column

.wrapper
  display           : flex
  justify-content   : space-between
  width             : 100%
  height            : 400px

.container
  background        : #fff
  width             : 100%
  padding           : 30px
  margin            : 20px 10px


// slider display setting

.range-slider
  position          : relative
  height            : 16px
  border            : 2px solid rgb(167, 169, 180)
  border-radius     : 25px

.range-btn
  position          : absolute;
  top               : 50%;
  transform         : translateY(-50%);

  width             : 14px;
  height            : 14px;

  border            : 2px solid #fffccc;
  border-radius     : 100%;
  background        : rgb(167, 169, 180);

  cursor            : pointer;
  transition        : all

