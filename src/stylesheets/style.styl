.page
  display           : flex
  flex-direction    : column
  justify-content   : space-between
  height            : 500px
  background        : #414c5c

.wrapper
  width             : 100%
  max-width         : 1200px
  margin            : 20px auto
  display           : flex
  justify-content   : space-between
  background        : #fff

.tuning
  width             : 700px
  padding           : 40px
  border-right      : 30px solid #414c5c

.container
  position            relative
  height            : 400px
  width             : 100%
  padding: 20px

.plugin
  width             : 100%
  height            : 100%

  display           : flex
  justify-content   : space-around
  align-items       : center

.container-field
  position absolute

  display           : flex
  justify-content   : space-between

.field-style
  margin            : 0 10px
  width             : 70px

  font              : 700 15px sans-serif
  color             : #414c5c

// slider display setting

// range
.js-range-slider
  position          : relative
  border            : 2px solid rgb(167, 169, 180)
  border-radius     : 25px
  margin            : 30px

  &__vertical
    width             : 18px
    height            : 100%

    & .js-range-interval
      left              : 50%
      transform         : translateX(-50%)
      width             : 14px


  &__horizontal
    height            : 18px
    width             : 100%

    & .js-range-interval
      top               : 50%
      transform         : translateY(-50%)
      height            : 14px



// button
.js-range-btn
  position          : absolute
  width             : 14px
  height            : 14px

  border            : 2px solid #fffccc
  border-radius     : 100%
  background        : rgb(167, 169, 180)

  z-index           : 1
  cursor            : pointer
  transition        : all

// interval
.js-range-interval
  position          : absolute
  background        : rgb(167, 169, 180)


// label
.js-label-wrapper
  position          : absolute

.js-label-container
  position          : absolute
  top               : -58px
  left              : -13px

  width             : 40px
  height            : 40px
  transform         : rotate(45deg)

  border            : 2px solid rgb(167, 169, 180)
  border-radius     : 100% 100% 0 100%
  background        : #fff

.js-label-input
  width             : 90%
  height            : 100%
  border            : none
  background        : none
  transform         : rotate(-45deg)

  text-align        : center
  font              : 700 14px sans-serif
  color             : #414c5c

  &:focus
    outline      none



