.rs-range-slider
  position          : relative
  height          : 100%
  width           : 100%
  display           : flex
  justify-content   : center
  align-items       : center

  &__container-label
    position        : absolute

  &__interval
    position        : absolute
    height          : 100%
    width           : 100%

  &__line
    position        : absolute
    height          : 100%
    width           : 100%
    border          : 1px solid rgb(167, 169, 180)
    border-radius   : 25px
    z-index         : 1

  &_position_vertical
    width           : 8px

  &_position_horizontal
    height          : 8px

