.rs-button-label
  position absolute
  bottom 16px
  left -22px
  width 42px
  height 42px
  z-index 1
  border 2px solid secondary-color
  border-radius 100% 
  background default-color 

  &:after
    content ""
    position absolute
    top 27px
    right 10px
    width 16px
    height 16px
    transform rotate(45deg)
    background default-color 
    border-bottom 2px solid secondary-color
    border-right 2px solid secondary-color

  &__input
    width 90%
    height 100%
    border none
    background none
    text-align center
    font 700 14px sans-serif
    color primary-color

    &:focus
      outline none

  &_lift-up
    z-index 10

  &_hide
    display none
