.rs-button-label
  position        : absolute
  bottom          : 16px
  left            : -22px
  width           : 42px
  height          : 42px
  z-index         : 1
  border          : 2px solid rgb(167, 169, 180)
  border-radius   : 100% 
  background      : #fff

  &:after
    content: ""
    position        : absolute
    top             : 27px
    right           : 10px
    width           : 16px
    height          : 16px
    transform       : rotate(45deg)
    background      : #fff
    border-bottom   : 2px solid rgb(167, 169, 180)
    border-right    : 2px solid rgb(167, 169, 180)

  &__input
    width           : 90%
    height          : 100%
    border          : none
    background      : none
    text-align      : center
    font            : 700 14px sans-serif
    color           : #414c5c

    &:focus
      outline       : none

  &_lift-up
    z-index         : 10

  &_hide
    display         : none
